-- Criação da interface gráfica
local ScreenGui = Instance.new("ScreenGui")
local Panel = Instance.new("Frame")
local ToggleButton = Instance.new("TextButton")
local OpenPanelButton = Instance.new("TextButton")
local ESPButton = Instance.new("TextButton")
local JumpButton = Instance.new("TextButton")
local PingLabel = Instance.new("TextLabel")
local FPSLabel = Instance.new("TextLabel")
local ResolutionLabel = Instance.new("TextLabel")

-- Configuração do painel
ScreenGui.Parent = game.CoreGui
Panel.Size = UDim2.new(0, 300, 0, 400)
Panel.Position = UDim2.new(0.5, -150, 0.5, -200)
Panel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Panel.Visible = true
Panel.Parent = ScreenGui

-- Configuração do botão de toggle do painel
ToggleButton.Size = UDim2.new(0, 100, 0, 50)
ToggleButton.Position = UDim2.new(0, 10, 0, 10)
ToggleButton.Text = "Toggle Painel"
ToggleButton.Parent = Panel

-- Configuração do botão abrir painel
OpenPanelButton.Size = UDim2.new(0, 100, 0, 50)
OpenPanelButton.Position = UDim2.new(0, 10, 0, 70)
OpenPanelButton.Text = "Abrir Painel"
OpenPanelButton.Visible = false
OpenPanelButton.Parent = Panel

-- Configuração do botão ESP
ESPButton.Size = UDim2.new(0, 100, 0, 50)
ESPButton.Position = UDim2.new(0, 10, 0, 130)
ESPButton.Text = "ESP"
ESPButton.Parent = Panel

-- Configuração do botão Power Jump
JumpButton.Size = UDim2.new(0, 100, 0, 50)
JumpButton.Position = UDim2.new(0, 10, 0, 190)
JumpButton.Text = "Power Jump"
JumpButton.Parent = Panel

-- Configuração dos labels
PingLabel.Size = UDim2.new(0, 250, 0, 50)
PingLabel.Position = UDim2.new(0, 10, 0, 250)
PingLabel.BackgroundTransparency = 1
PingLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
PingLabel.Parent = Panel

FPSLabel.Size = UDim2.new(0, 250, 0, 50)
FPSLabel.Position = UDim2.new(0, 10, 0, 280)
FPSLabel.BackgroundTransparency = 1
FPSLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
FPSLabel.Parent = Panel

ResolutionLabel.Size = UDim2.new(0, 250, 0, 50)
ResolutionLabel.Position = UDim2.new(0, 10, 0, 310)
ResolutionLabel.BackgroundTransparency = 1
ResolutionLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
ResolutionLabel.Parent = Panel

-- Variável para controle do ESP
local espEnabled = false

-- Função para ativar o ESP
local function toggleESP()
    espEnabled = not espEnabled
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            if espEnabled then
                local highlight = Instance.new("Highlight", player)
                highlight.FillColor = Color3.fromRGB(255, 255, 0)  -- Cor amarela
                highlight.OutlineColor = Color3.fromRGB(0, 0, 0)  -- Cor do contorno
                highlight.OutlineTransparency = 0.5
                highlight.Adornee = player.Character or player.CharacterAdded:Wait()
            else
                for _, child in pairs(player:GetChildren()) do
                    if child:IsA("Highlight") then
                        child:Destroy()
                    end
                end
            end
        end
    end
end

-- Função para atualizar Ping, FPS e Resolução
local function updateStats()
    while true do
        PingLabel.Text = "Ping: " .. game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValueString()
        FPSLabel.Text = "FPS: " .. math.floor(1 / game:GetService("RunService").RenderStepped:Wait())
        ResolutionLabel.Text = "Resolução: " .. game.Workspace.CurrentCamera.ViewportSize.X .. "x" .. game.Workspace.CurrentCamera.ViewportSize.Y
        wait(1)  -- Atualiza a cada segundo
    end
end

-- Função para ativar o Power Jump
local function activateJump()
    local jumpHeight = 50  -- Altere este valor conforme necessário
    game.Players.LocalPlayer.Character.Humanoid.JumpPower = jumpHeight
end

-- Conectando os botões às funções
ToggleButton.MouseButton1Click:Connect(function()
    Panel.Visible = not Panel.Visible
    OpenPanelButton.Visible = not Panel.Visible
end)

OpenPanelButton.MouseButton1Click:Connect(function()
    Panel.Visible = true
    OpenPanelButton.Visible = false
end)

ESPButton.MouseButton1Click:Connect(function()
    toggleESP()
    ESPButton.Text = espEnabled and "Desativar ESP" or "ESP"
end)

JumpButton.MouseButton1Click:Connect(function()
    activateJump()
end)

-- Iniciando a atualização dos status
updateStats()



