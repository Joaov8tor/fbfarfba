-- Criando o GUI do Script Hub
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local JumpLabel = Instance.new("TextLabel")
local JumpBox = Instance.new("TextBox")
local ApplyButton = Instance.new("TextButton")
local EspButton = Instance.new("TextButton")
local PanelToggleButton = Instance.new("TextButton") -- Botão para ocultar/exibir o painel
local isVisible = true -- Variável para controlar a visibilidade do painel

-- Configurando o ScreenGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "ScriptHub"

-- Configurando o Frame principal
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.new(1, 1, 1)
Frame.Position = UDim2.new(0.5, -100, 0.5, -100)
Frame.Size = UDim2.new(0, 200, 0, 200)
Frame.BorderSizePixel = 0

-- Configurando o TextLabel para o Jump
JumpLabel.Parent = Frame
JumpLabel.Text = "Jump Height"
JumpLabel.Size = UDim2.new(1, 0, 0, 30)
JumpLabel.BackgroundTransparency = 1

-- Configurando o TextBox para o Jump
JumpBox.Parent = Frame
JumpBox.Size = UDim2.new(1, 0, 0, 30)
JumpBox.Position = UDim2.new(0, 0, 0, 30)
JumpBox.BackgroundColor3 = Color3.new(0.8, 0.8, 0.8)
JumpBox.PlaceholderText = "Enter jump height"

-- Configurando o TextButton para aplicar o Jump
ApplyButton.Parent = Frame
ApplyButton.Text = "Apply Jump"
ApplyButton.Size = UDim2.new(1, 0, 0, 30)
ApplyButton.Position = UDim2.new(0, 0, 0, 70)
ApplyButton.BackgroundColor3 = Color3.new(0.2, 0.8, 0.2)

-- Configurando o TextButton para ESP
EspButton.Parent = Frame
EspButton.Text = "Toggle ESP"
EspButton.Size = UDim2.new(1, 0, 0, 30)
EspButton.Position = UDim2.new(0, 0, 0, 110)
EspButton.BackgroundColor3 = Color3.new(0.2, 0.8, 0.8)

-- Configurando o TextButton para ocultar/exibir o painel
PanelToggleButton.Parent = Frame
PanelToggleButton.Text = "Toggle Painel"
PanelToggleButton.Size = UDim2.new(1, 0, 0, 30)
PanelToggleButton.Position = UDim2.new(0, 0, 0, 150)
PanelToggleButton.BackgroundColor3 = Color3.new(0.8, 0.2, 0.2)

-- Função para aplicar o Jump Height
ApplyButton.MouseButton1Click:Connect(function()
    local jumpHeight = tonumber(JumpBox.Text)
    if jumpHeight then
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = jumpHeight
    else
        print("Por favor, insira um número válido.")
    end
end)

-- Função para alternar o ESP
EspButton.MouseButton1Click:Connect(function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            local esp = Instance.new("BillboardGui")
            esp.Size = UDim2.new(1, 0, 1, 0)
            esp.Adornee = player.Character:WaitForChild("Head")
            esp.AlwaysOnTop = true
            
            local nameLabel = Instance.new("TextLabel", esp)
            nameLabel.Size = UDim2.new(1, 0, 1, 0)
            nameLabel.Text = player.Name
            nameLabel.BackgroundTransparency = 1
            nameLabel.TextColor3 = Color3.new(1, 1, 0) -- Amarelo
            nameLabel.TextScaled = true
            
            esp.Parent = player.Character:WaitForChild("Head")
        end
    end
end)

-- Função para alternar a visibilidade do painel
PanelToggleButton.MouseButton1Click:Connect(function()
    isVisible = not isVisible
    Frame.Visible = isVisible
end)

-- Ajuste do painel inicial
Frame.Visible = isVisible


