-- Criando o GUI do Script Hub
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local JumpLabel = Instance.new("TextLabel")
local JumpBox = Instance.new("TextBox")
local ApplyButton = Instance.new("TextButton")
local EspButton = Instance.new("TextButton")

-- Configurando o ScreenGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "ScriptHub"

-- Configurando o Frame principal
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.new(1, 1, 1)
Frame.Size = UDim2.new(0, 400, 0, 300)  -- Aumentando o tamanho do painel
Frame.Position = UDim2.new(0.5, -200, 0.5, -150)

-- Configurando o rótulo do Power Jump
JumpLabel.Parent = Frame
JumpLabel.Text = "Power Jump:"
JumpLabel.Size = UDim2.new(0, 100, 0, 50)
JumpLabel.Position = UDim2.new(0, 10, 0, 20)
JumpLabel.TextColor3 = Color3.new(0, 0, 0)
JumpLabel.TextSize = 18

-- Configurando a caixa de entrada para o valor do Jump
JumpBox.Parent = Frame
JumpBox.PlaceholderText = "50"  -- Valor padrão
JumpBox.Size = UDim2.new(0, 150, 0, 50)
JumpBox.Position = UDim2.new(0, 120, 0, 20)
JumpBox.TextColor3 = Color3.new(0, 0, 0)
JumpBox.TextSize = 18

-- Configurando o botão Aplicar
ApplyButton.Parent = Frame
ApplyButton.Text = "Aplicar Jump"
ApplyButton.Size = UDim2.new(0, 350, 0, 50)
ApplyButton.Position = UDim2.new(0, 25, 0, 80)
ApplyButton.BackgroundColor3 = Color3.new(0.2, 0.6, 0.8)
ApplyButton.TextColor3 = Color3.new(1, 1, 1)
ApplyButton.TextSize = 18

-- Configurando o botão ESP
EspButton.Parent = Frame
EspButton.Text = "Ativar ESP"
EspButton.Size = UDim2.new(0, 350, 0, 50)
EspButton.Position = UDim2.new(0, 25, 0, 150)
EspButton.BackgroundColor3 = Color3.new(0.2, 0.6, 0.8)
EspButton.TextColor3 = Color3.new(1, 1, 1)
EspButton.TextSize = 18

-- Variável para controle do ESP
local espEnabled = false

-- Função para ativar/desativar ESP
local function toggleESP()
    espEnabled = not espEnabled

    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            if espEnabled then
                -- Criar um BillboardGui para o ESP
                local billboardGui = Instance.new("BillboardGui")
                billboardGui.Adornee = player.Character:WaitForChild("HumanoidRootPart")
                billboardGui.Size = UDim2.new(0, 100, 0, 100)
                billboardGui.StudsOffset = Vector3.new(0, 3, 0)

                -- Criar um frame para a cor do ESP
                local frame = Instance.new("Frame")
                frame.BackgroundColor3 = Color3.new(1, 1, 0) -- Cor amarela
                frame.Size = UDim2.new(1, 0, 1, 0)
                frame.Parent = billboardGui

                -- Criar um TextLabel para o nickname
                local nameLabel = Instance.new("TextLabel")
                nameLabel.Size = UDim2.new(1, 0, 0, 20)
                nameLabel.Position = UDim2.new(0, 0, 0, -25)  -- A posição acima do ESP
                nameLabel.BackgroundTransparency = 1
                nameLabel.Text = player.Name
                nameLabel.TextColor3 = Color3.new(1, 1, 1) -- Texto branco
                nameLabel.TextSize = 14
                nameLabel.Parent = billboardGui

                billboardGui.Parent = workspace
            else
                -- Remover o ESP
                for _, v in pairs(workspace:GetChildren()) do
                    if v:IsA("BillboardGui") and v.Adornee and v.Adornee:IsDescendantOf(player.Character) then
                        v:Destroy()
                    end
                end
            end
        end
    end
end

-- Função para alterar o Power Jump
ApplyButton.MouseButton1Click:Connect(function()
    local newJumpPower = tonumber(JumpBox.Text) or 50  -- Usa 50 se a entrada for inválida
    game.Players.LocalPlayer.Character.Humanoid.JumpPower = newJumpPower
end)

-- Conectando o botão ESP
EspButton.MouseButton1Click:Connect(toggleESP)

-- Função para arrastar o painel
local dragging = false
local dragStart = Vector3.new()
local startPos = Vector3.new()

Frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
    end
end)

Frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

Frame.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        Frame.Position = UDim2.new(startPos.X.Offset + delta.X, 0, startPos.Y.Offset + delta.Y, 0)
    end
end)



