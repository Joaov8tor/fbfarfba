-- Script Principal
local Player = game.Players.LocalPlayer
local Mouse = Player:GetMouse()
local UserInputService = game:GetService("UserInputService")

-- Criar um painel
local ScreenGui = Instance.new("ScreenGui", Player.PlayerGui)
local Panel = Instance.new("Frame", ScreenGui)
Panel.Size = UDim2.new(0, 300, 0, 400)
Panel.Position = UDim2.new(0.5, -150, 0.5, -200)
Panel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Panel.Visible = true

-- Criar um botão de script
local ScriptButton = Instance.new("TextButton", ScreenGui)
ScriptButton.Size = UDim2.new(0, 100, 0, 50)
ScriptButton.Position = UDim2.new(0.5, -50, 0, 20) -- Posição do botão fora do painel
ScriptButton.Text = "Script"
ScriptButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)

-- Função para tornar o painel invisível ou visível
local function togglePanel()
    Panel.Visible = not Panel.Visible
end

-- Conexão do botão de script
ScriptButton.MouseButton1Click:Connect(function()
    togglePanel()
end)

-- Função para arrastar o painel
local dragging = false
local dragInput, startPos, startSize

ScriptButton.MouseButton1Down:Connect(function()
    dragging = true
    startPos = Mouse.Position
end)

Mouse.Move:Connect(function()
    if dragging then
        local delta = Mouse.Position - startPos
        Panel.Position = Panel.Position + UDim2.new(0, delta.X, 0, delta.Y)
        startPos = Mouse.Position
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Criar mais botões no painel
local function createButton(text, position, callback)
    local button = Instance.new("TextButton", Panel)
    button.Size = UDim2.new(0, 280, 0, 40)
    button.Position = position
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)

    button.MouseButton1Click:Connect(callback)
end

-- Adicionar funcionalidades dos botões
createButton("ESP Players", UDim2.new(0, 10, 0, 60), function()
    print("ESP Players Activated")
    -- Aqui você pode adicionar a lógica para ESP
end)

createButton("Ping", UDim2.new(0, 10, 0, 110), function()
    print("Ping: " .. game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue()) -- Exibir o ping
end)

createButton("FPS", UDim2.new(0, 10, 0, 160), function()
    print("FPS: " .. math.floor(1 / game:GetService("RunService").RenderStepped:Wait())) -- Exibir FPS
end)

createButton("Resolução", UDim2.new(0, 10, 0, 210), function()
    print("Resolução: " .. workspace.CurrentCamera.ViewportSize.X .. "x" .. workspace.CurrentCamera.ViewportSize.Y) -- Exibir resolução
end)

-- Adicione outras funções conforme necessário
